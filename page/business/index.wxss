@import "../common/weui.wxss";
.body
{
  height: 100%;
  width: 100%;
  display: inherit;
}
        
.placeholderclass 
 {
        /* placeholder颜色  */
        color: #aab2bd;
        /* placeholder字体大小  */
        font-size: 16px;
        /* placeholder位置  */
        text-align: left;
}
.main
{
 height: 100%;
  width: 100%;
  margin-top: 20px;
}
.row
{
  border-top: 1px solid #eeeeee;
  height: 40px;
  border-bottom: 1px solid #eeeeee;
}
.rowImg
{
  border-top: 1px solid #eeeeee;
  
}
.rowbotton
{
   margin-top:20px;
   height: 40px;
   margin-bottom: 20px;
}
.rowname
{

  height: 40px;
  line-height: 40px;
  float: left;
  width: 25%;
  padding-left: 10px;
}
.rowmoth
{
  border-top: 1px solid #eeeeee;
  height: 150px;
}
.rowmothtext
{
   height: 40px;
   line-height: 40px;
   padding-left: 10px;
}
.rowmain
{
   height: 40px;
   float: left;
   width: 72%;
}
.rowmaininput
{
  display:inline-block;
  width: 200px;
  margin-top: 10px;
 
}
.rowmainpicker
{
  display:inline-block;
  vertical-align: top;
  margin-top: 10px;
}
@font-face {
  font-family: 'iconfont';  /* project id 306651 */
  src: url('//at.alicdn.com/t/font_306651_0gcuu5owur0c.eot');
  src: url('//at.alicdn.com/t/font_306651_0gcuu5owur0c.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_306651_0gcuu5owur0c.woff') format('woff'),
  url('//at.alicdn.com/t/font_306651_0gcuu5owur0c.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_306651_0gcuu5owur0c.svg#iconfont') format('svg');
}

.iconfont {
  font-family:"iconfont" !important;
  font-size:18px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icon-jiantouyou:before { content: "\e62d"; }
.month-panel{
  margin-left:10px;
  margin-right:10px;
  /* border:1px solid; */
  box-sizing:border-box;
  width: calc(100% - 20px);
  height: calc(100% - 40px);
  overflow: hidden;
}
.month-btn{
 border:1px solid grey;
width:calc(25% - 12.5px);
height:30px;
text-align:center;
line-height:30px;
float:left;
margin-right:10px;
box-sizing:border-box;
margin-top:3px; 
}
.month-row{
  width: 100%;
  height: 36px;
  /* border:1px solid red; */
  box-sizing: border-box;
}
.month-active-btn{
  border: 1px solid red;
  color:red;
}


